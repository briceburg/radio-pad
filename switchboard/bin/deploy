#!/usr/bin/env bash
set -eo pipefail
PROJECT_ROOT="$(git rev-parse --show-toplevel)/switchboard"

lt --port 1980 --subdomain radioswitchboard || {
    echo "Localtunnel failed to start. Please check your network connection or Localtunnel service status."
    echo "install Localtunnel (lt) globally with: npm install -g localtunnel"
    exit 1
}
